{
  "name": "cloud-worker",
  "version": "1.0.0",
  "description": "Worker pattern implemented using Node.js and Redis",
  "main": "dist/index.js",
  "repository": "git@github.com:marcuiulian13/cloud-worker.git",
  "author": "Iulian Marcu <marcu.iulian13@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node -r dotenv/config dist/",
    "start:master": "yarn build && cross-env TYPE=master yarn start",
    "start:slave": "yarn build && cross-env TYPE=slave yarn start",
    "start:watch": "concurrently \"yarn build --watch\" \"nodemon -w dist/ dist/index.js\"",
    "test": "jest"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/ioredis": "^4.14.7",
    "@types/jest": "^25.1.3",
    "@types/uuid": "^3.4.7",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.0",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "ioredis": "^4.16.0",
    "uuid": "^3.4.0"
  }
}
